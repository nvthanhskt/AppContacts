<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="#bcbcbc"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="#045908"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="280dp">
        <ImageView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:src="@drawable/lienlac"
            android:layout_height="220dp" />
        <TextView
            android:textSize="30dp"
            android:fontFamily="cursive"
            android:layout_marginLeft="10dp"
            android:textColor="#f9f4f4"
            android:id="@+id/txt_ten_ct"
            android:text="Thành Nguyễn"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/note"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            app:cardCornerRadius="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:background="#fcdfb3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="60dp"
                android:src="@drawable/phone"
                android:layout_height="40dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="25dp"
                android:textColor="#111"
                android:id="@+id/txt_sdt_ct"
                android:text="0399898176"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="60dp"
                android:src="@drawable/gr4"
                android:layout_height="40dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="25dp"
                android:textColor="#111"
                android:id="@+id/txt_nhom_ct"
                android:text="0399898176"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="80dp"
                android:layout_width="50dp"
                android:id="@+id/cell_phone"
                android:src="@drawable/cell"
                android:layout_height="50dp" />

            <ImageView
                android:layout_marginLeft="80dp"
                android:layout_width="50dp"
                android:id="@+id/back"
                android:src="@drawable/ba"
                android:layout_height="50dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>